{% extends 'base.html.twig' %}

{% block title %}Entretien index{% endblock %}

{% block body %}
    <h1>Entretien index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Date</th>
                <th>Lienmeet</th>
                <th>Heure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entretien in entretiens %}
            <tr>

                <td>{{ entretien.date }}</td>
                <td>{{ entretien.lienmeet }}</td>
                <td>{{ entretien.heure }}</td>
                <td>
                    <a href="{{ path('app_entretien_show', {'id': entretien.id}) }}">show</a>
                    <a href="{{ path('app_entretien_edit', {'id': entretien.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
